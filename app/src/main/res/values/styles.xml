<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorDivider</item>
    </style>

    <style name="AppTheme1" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorDivider</item>
    </style>
    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Dark5" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorTextIcons</item>

        <item name="colorControlNormal">@color/colorDivider</item>
        <item name="colorControlActivated">@color/colorDivider</item>
        <item name="colorControlHighlight">@color/colorDivider</item>
        <item name="android:textColorHint">@color/colorDivider</item>

        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="spinnerTheme" parent="android:Theme">
        <item name="android:textColor">@color/colorTextIcons</item>
    </style>

    <style name="AppTheme.Dark.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/colorTextIcons</item>
        <item name="android:textColorPrimary">@color/colorTextIcons</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="BottomNavigation">
        <item name="android:background">@color/colorTextIcons</item>
        <item name="itemIconTint">@color/colorPrimaryText</item>
        <item name="itemTextColor">@color/colorDivider</item>
        <item name="paddingStart">20dp</item>
        <item name="paddingEnd">20dp</item>
    </style>
</resources>

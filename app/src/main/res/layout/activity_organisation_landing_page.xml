<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_organisation_landing_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="vuram_test_2.vuram.com.vuram_test_2.OrganisationLandingPage"
        android:background="@drawable/gradient_loing_page"
    android:orientation="vertical"
    android:backgroundTint="@color/colorPrimary">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:background="@color/colorPrimaryDark">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/colorPrimaryDark"
        android:theme="?attr/actionBarTheme"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/toolbar_home_page"
        android:layout_weight="0"
        android:elevation="5dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/current_location_textview_home"
                    android:layout_weight="1"
                    android:text="@string/location"
                    android:textColor="@color/colorTextIcons"
                    android:gravity="center_vertical"
                    android:layout_alignParentTop="true"
                    android:layout_alignBottom="@+id/menu_imagebutton_donor_home" />

                <TextView
                    android:text="@string/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/appTitle"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/colorTextIcons"
                    android:textSize="30sp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:layout_weight="8.46"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_menu_white_48px"
                    android:id="@+id/menu_imagebutton_donor_home"
                    android:layout_weight="0"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_current_location_white"
                    android:id="@+id/current_location_imagebutton_home"
                    android:layout_weight="1"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/appTitle" />
            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.Toolbar>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="0"
            android:elevation="5dp"
            android:background="@color/colorPrimaryDark">

            <Spinner
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:id="@+id/author_spinner_donor_home"
                android:layout_weight="1"
                android:backgroundTint="@color/colorTextIcons"
                android:foregroundTint="@color/colorTextIcons"
                android:gravity="center_vertical|start"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="7dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_filter_white"
                android:id="@+id/filter_imagebutton_donor_home"
                android:layout_weight="1"
                android:backgroundTint="@color/colorPrimary"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:background="@color/colorPrimary">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar2"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:background="@color/colorPrimaryDark">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView12"
                app:srcCompat="@drawable/list"
                android:layout_weight="0.25"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView13"
                app:srcCompat="@drawable/receiveddonations"
                android:layout_weight="0.25"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/iconsc"
                android:id="@+id/imageView11"
                android:layout_weight="0.25"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/user"
                android:id="@+id/imageView10"
                android:layout_weight="0.25"/>
        </LinearLayout>

      </android.support.v7.widget.Toolbar>
    </LinearLayout>

</LinearLayout>

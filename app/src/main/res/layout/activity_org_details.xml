<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="wrap_content"
    android:nestedScrollingEnabled="true">
<LinearLayout
    android:id="@+id/activity_donor_org_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.gokulrajk.vuram2.donor_org_details"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/colorTextIcons">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:paddingLeft="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <eu.fiskur.simpleviewpager.SimpleViewPager
                android:id="@+id/simple_view_pager_donor_org"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:scaleType="CENTER_CROP"
                app:circlesPaddingBottom="60dp"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_back_black"
                android:id="@+id/back_home"
                android:background="@color/colorTextIcons" />
        </RelativeLayout>

    </LinearLayout>



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ngo"
                android:id="@+id/adapter2"
                android:textStyle="bold|italic"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="250dp"
                android:layout_height="80dp"
                android:weightSum="1">
                <TextView
                    android:text="Vasantham"
                    android:layout_height="30dp"
                    android:textStyle="normal|bold"
                    android:textSize="22sp"
                    android:id="@+id/adapter1"
                    android:layout_width="135dp"
                    android:textColor="@color/colorPrimaryText"
                    android:layout_weight="0.20"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView15"
                android:textSize="14sp"
                android:textColor="@color/colorSecondaryText"
                android:layout_marginStart="10dp" />

            <TextView
                android:text="044 - 2656 0662"
                android:textSize="14sp"
                android:id="@+id/adapter5"
                android:layout_width="143dp"
                android:layout_height="20dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView16"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/address1"
                android:gravity="left"
                android:layout_width="wrap_content"
                android:maxLines="4"
                android:lines="4"
                android:text="East Mogappair,(Next to TNEB Office and Telephone Exchange),Chennai 600 037"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_height="40dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView17"
                android:layout_weight="1"
                android:layout_marginStart="10dp" />

            <TextView
                android:text="vasantham89@gmail.com"
                android:textSize="14sp"
                android:id="@+id/adapter3"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textColor="@color/colorPrimary"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/Need"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="normal|bold"
                android:layout_marginTop="10dp" />
        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view_donor_org"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right">
        <Button
            android:layout_width="match_parent"
            android:id="@+id/donate_donor_org"
            android:text="@string/Donate"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal|center" />
        </LinearLayout>
        </LinearLayout>

</LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp">
                <TextView
                    android:text="@string/category_name_display"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/category_DonationCart"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_weight="0.95"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_weight="0.75"
                    android:id="@+id/categoryIcon_DonationCart"
                    android:layout_height="25dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="0.25">

                    <TextView
                        android:text="@string/item_name_display"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/itemViewName_DonationCart"
                        android:textSize="16dp"
                        android:textColor="@color/colorSecondaryText"
                        android:layout_weight="0.5"
                        android:paddingLeft="5dp"
                        android:gravity="center_horizontal" />
                    <TextView
                        android:text="@string/item_quantity_display"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16dp"
                        android:layout_weight="0.5"
                        android:textColor="@color/colorSecondaryText"
                        android:paddingLeft="0.55dp"
                        android:id="@+id/itemViewQuantity_DonationCart"
                        android:gravity="center_horizontal" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>